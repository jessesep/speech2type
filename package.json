{
  "name": "speech2type-enhanced",
  "version": "0.6.0",
  "description": "Voice typing CLI for Mac with voice commands (affirmative, retract, silence) and Claude Code TTS integration.",
  "author": "jessesep",
  "license": "MIT",
  "homepage": "https://github.com/jessesep/speech2type",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jessesep/speech2type.git"
  },
  "keywords": [
    "speech-to-text",
    "voice-typing",
    "dictation",
    "macos",
    "cli"
  ],
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "speech2type": "bin/speech2type.js",
    "s2t": "bin/speech2type.js"
  },
  "files": [
    "bin/",
    "src/",
    "swift/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "os": [
    "darwin"
  ],
  "cpu": [
    "arm64"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/jessesep/speech2type/issues"
  },
  "scripts": {
    "start": "./bin/speech2type.js",
    "build:swift": "mkdir -p bin && swiftc -O -o bin/hotkey-manager swift/hotkey-manager.swift && swiftc -O -o bin/permission-checker swift/permission-checker.swift && swiftc -O -o bin/mic-recorder swift/mic-recorder.swift && swiftc -O -o bin/focus-checker swift/focus-checker.swift",
    "build": "npm run build:swift",
    "dev": "npm run build && ./bin/speech2type.js",
    "gui": "electron gui/main.cjs",
    "gui:dev": "NODE_ENV=development electron gui/main.cjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "push": "git add . && git commit -m 'ship!' && git push",
    "release": "npm version patch && npm publish"
  },
  "preferGlobal": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@deepgram/sdk": "^3.6.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "conf": "^10.2.0",
    "fuse.js": "^7.1.0",
    "keytar": "^7.9.0",
    "node-osc": "^11.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@vitest/coverage-v8": "^4.0.15",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "vitest": "^4.0.15"
  },
  "build": {
    "appId": "com.jessesep.speech2type",
    "productName": "Speech2Type Enhanced",
    "directories": {
      "output": "dist"
    },
    "files": [
      "gui/**/*",
      "src/**/*",
      "bin/**/*",
      "addons/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "addons/",
        "to": "addons/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Speech2Type Enhanced",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
